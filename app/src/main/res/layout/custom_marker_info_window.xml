<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble_box"
    android:backgroundTint="@color/dialog_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/bubble_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/adaptive_color"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Oracle" />

    <TextView
        android:id="@+id/bubble_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/adaptive_color"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bubble_subdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bubble_title"
        android:textStyle="italic"
        android:textColor="@color/adaptive_color"
        android:layout_marginBottom="10dp"
        android:textSize="13sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/bubble_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bubble_title"
        android:layout_marginStart="5dp"
        android:background="@color/transparent"
        android:contentDescription="@string/vessel_content_description"
        android:src="@drawable/arrow_forward"
        app:tint="@color/adaptive_color" />

</RelativeLayout>